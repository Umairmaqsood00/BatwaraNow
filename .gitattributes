# Auto detect text files and perform LF normalization
* text=auto

# TypeScript files
*.ts text eol=lf
*.tsx text eol=lf

# JavaScript files
*.js text eol=lf
*.jsx text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch files (Windows)
*.bat text eol=crlf

# PowerShell files
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary 